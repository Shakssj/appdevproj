<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20">

    <Button
        android:textAllCaps="false"
        style="@style/RoundedButton"
        android:layout_marginLeft="30dp"
        android:id="@+id/sign_in"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="710dp"
        android:text="Sign In"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:backgroundTint="#CB291C"/>
    <TextView
        android:id="@+id/signin"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:text="Sign In" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back1"
        android:backgroundTint="#181A20"/>

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/welcome"
        android:backgroundTint="#181A20"
        />

    <ImageView
        android:id="@+id/plsenter"
        android:layout_width="480dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        android:scaleType="fitCenter"
        android:src="@drawable/pleaseenter"
        android:backgroundTint="#181A20"
        />

     <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbooking_hello_text_view"
        android:layout_marginLeft="70dp"
       android:layout_marginTop="600dp"
        android:text="Dont have an Acount?" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />
    
    <EditText
        android:textColorHint="#6A6B6D"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="Email"
        android:paddingLeft="15dp"

        />
    <ImageView
        android:id="@+id/email"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="310dp"
        android:src="@drawable/email"/>

    <EditText
        android:textColorHint="#6A6B6D"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="Password"
        android:paddingLeft="15dp"
        
        />
    <ImageView
        android:id="@+id/lock"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="440dp"
        android:src="@drawable/lock"/>

    <TextView
        
        android:id="@+id/Clickview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbooking_hello_text_view"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        android:text="Click Here" 
        android:textColor="#CB291C"
        android:textSize="17sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbooking_hello_text_view"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        android:text="Forgot Password?" 
        android:textColor="#CB291C"
        android:textSize="17sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/temail"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:text="Email" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tpassword"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="390dp"
        android:text="Password" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

   
        
        />
    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="550dp"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="650dp"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"/>

    
    

   

</RelativeLayout>
