<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back1"
        android:backgroundTint="#181A20"/>

    <ImageView
        android:id="@+id/signup"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/signup"
        android:backgroundTint="#181A20"
        />
    <ImageView
        android:id="@+id/createacc"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:scaleType="fitCenter"
        android:src="@drawable/createacc"
        android:backgroundTint="#181A20"
        />

    <ImageView
        android:id="@+id/enter"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:scaleType="fitCenter"
        android:src="@drawable/enter"
        android:backgroundTint="#181A20"
        />

     


    
    <TextView
        android:id="@+id/user"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:text="Fullname" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

    
    

    <EditText
        android:id="@+id/edittextFullname"
        android:textColorHint="#6A6B6D"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="Fullname"
        android:paddingLeft="15dp"

        />
    <ImageView
        android:id="@+id/username"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="240dp"
        android:src="@drawable/username"/>

    <TextView
        android:id="@+id/temail"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="300dp"
        android:text="Email" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />
   
    <EditText
        android:id="@+id/edittextEmail"
        android:textColorHint="#6A6B6D" 
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="Email"
        android:paddingLeft="15dp"

        />
    <ImageView
        android:id="@+id/email"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="340dp"
        android:src="@drawable/email"/>

    
    
    

    <TextView
        android:id="@+id/tpassword"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:text="Password" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

     
    <EditText
        android:id="@+id/edittextPassword"
        android:textColorHint="#6A6B6D" 
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"

        
        />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="440dp"
        android:src="@drawable/lock"/>

        />

     
    <EditText
        android:id="@+id/edittextCPassword"
        android:textColorHint="#6A6B6D" 
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/XMLfile1"
        android:backgroundTint="#1F222A"
        android:layout_marginLeft="16dp"
        android:textColor="#ffff"
        android:hint="ConfirmPassword"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        

        
        />

    <ImageView
        android:id="@+id/lock1"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
         android:layout_marginTop="510dp"
        android:src="@drawable/lock"/>

        />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbooking_hello_text_view"
        android:layout_marginLeft="70dp"
       android:layout_marginTop="650dp"
        android:text="Already have an Acount?" 
        android:textColor="#ffff"
        android:textSize="17sp"
        android:textAlignment="center" />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="600dp"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/Clickview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mbooking_hello_text_view"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="650dp"
        android:text="Click Here" 
        android:textColor="#CB291C"
        android:textSize="17sp"
        android:textAlignment="center" />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="690dp"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"
        />

    <Button
         android:id="@+id/sign_up"
        android:textAllCaps="false"
        style="@style/RoundedButton"
        android:layout_marginLeft="30dp"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="750dp"
        android:text="Sign Up"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:backgroundTint="#CB291C"/>

    
</RelativeLayout>
