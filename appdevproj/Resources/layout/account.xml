<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20">

     <ImageView
        
        android:layout_marginLeft="5dp"
        android:layout_marginTop="170dp"
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:src="@drawable/line"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="140dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:id = "@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="140dp"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Account"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/watchl"
       android:layout_width="400dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/watchlist"
       android:backgroundTint="#181A20"
       android:layout_marginTop="200dp"
       android:layout_marginLeft="10dp"/>
     <ImageButton
        android:id="@+id/personinfo"
       android:layout_width="400dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/personalinfo"
       android:backgroundTint="#181A20"
       android:layout_marginTop="260dp"
       android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/logout"
       android:layout_width="150dp"
       android:layout_height="60dp"
       android:scaleType="fitCenter"
       android:src="@drawable/logout"
       android:backgroundTint="#181A20"
       android:layout_marginTop="320dp"
       android:layout_marginLeft="2dp"/>

    <ImageButton
        android:id="@+id/homeBTN"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/homew"
       android:backgroundTint="#181A20"
       android:layout_marginTop="820dp"
       android:layout_marginLeft="10dp"/>

    <ImageButton 
        android:id="@+id/movieBTN"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/movie"
       android:backgroundTint="#181A20"
       android:layout_marginTop="820dp"
       android:layout_marginLeft="90dp"/>
    <ImageButton
        android:id="@+id/ticketBTN"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/tickets"
       android:backgroundTint="#181A20"
       android:layout_marginTop="820dp"
        android:layout_marginLeft="170dp"/>
    <ImageButton
        android:id="@+id/srchBTN"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/searchh"
       android:backgroundTint="#181A20"
       android:layout_marginTop="820dp"
       android:layout_marginLeft="250dp"/>
    <ImageButton

        android:id="@+id/accBTN"
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:scaleType="fitCenter"
       android:src="@drawable/acco"
       android:backgroundTint="#181A20"
       android:layout_marginTop="820dp"
        android:layout_marginLeft="330dp"/>

</RelativeLayout>
