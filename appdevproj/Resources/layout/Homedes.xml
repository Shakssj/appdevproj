<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181A20"
    >
     <TextView
        android:id="@+id/moviedes"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Movie Description"
        android:layout_marginLeft="130dp"
        android:textColor="@android:color/white"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back1"
        android:backgroundTint="#181A20"/>

    <ImageView
        android:id="@+id/imgev1"
         android:layout_width="140dp"
         android:layout_height="200dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:scaleType="fitCenter"/>
 
    <TextView
        android:id="@+id/titleText"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="190dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="190dp"
        android:textSize="15dp"
        android:text="Duration  :"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="190dp"
        android:textSize="15dp"
        android:text="Director   :"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="190dp"
        android:textSize="15dp"
        android:text="Genre       :"
        android:textColor="@android:color/white"/>


    

    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="280dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/directorText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="280dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/genreText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="280dp"
        android:textSize="15dp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:text="Sypnosis"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

     <TextView
        android:id="@+id/sypnosisText"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="35dp"
        android:textSize="15dp"
        android:text=""
        android:textColor="@android:color/white"/>

    <Button
        android:textAllCaps="false"
        style="@style/RoundedButton"
        android:layout_marginLeft="30dp"
        android:id="@+id/sign_in_button2"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="820dp"
        android:text="Book Now"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:backgroundTint="#CB291C"/>


</RelativeLayout>
